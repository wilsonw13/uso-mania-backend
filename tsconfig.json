{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": [
      "ES2022"
    ],
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false,
  },
  "ts-node": {
    "esm": true,
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*.ts",
    "src/routes.js",
    "src/app.ts"
  ],
}